---
import '@fontsource/inter/variable.css';

// Nunito
// Dosis
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Poppins';
    --aw-font-serif: 'Noto Serif';
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(254 166 43);
    --aw-color-secondary: rgb(137 63 253);
    --aw-color-accent: rgb(51 51 51);
    --aw-color-text-page: rgb(255, 255, 255);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(0 0 0);

    --aw-text-xs: .75rem;
    --aw-text-sm: 0.875;
    --aw-text-base: 1rem;
    --aw-text-xl: 1.25rem;
    --aw-text-2xl: 1.5rem;
    --aw-text-3xl: 1.875rem;
    --aw-text-4xl: 2.25rem;
    --aw-text-5xl: 3rem;
    --aw-text-6xl: 3.75rem;
    --aw-text-7xl: 4.5rem;
    --aw-text-8xl: 6rem;
  }
</style>
